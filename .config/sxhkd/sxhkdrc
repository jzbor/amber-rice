### APPS ###
super + w
	firefox
super + shift + w
	firefox --private
super + ctrl + w
	rofi-web.sh

super + BackSpace
	$TERMINAL -e nvim
super + Return
	$TERMINAL

super + b
	$FILEBROWSER

super + p
	mpv
super + shift + p
	mpv "$(clipit -c)" --idle=no
super + ctrl + p
	mpv "https://$(rofi -dmenu -p "https://")" --idle=no

super + s
	spotify

super + n
	notes.sh view
super + shift + n
	$TERMINAL -e notes.sh


### ROFI SCRIPTS ###
super + d
	rofi -combi-modi drun,window,ssh -show combi
super + {shift, ctrl} + d
	rofi -show {window,run}

super + Home
	menu.sh
super + Menu
	menu.sh

ctrl + alt + Delete
	menu.sh system

super + Delete
	rofi-kill.sh

super + shift + c
	rofi-projects.sh

super + {ctrl, shift} + s
	rofi-unicode.sh {_,insert}

super + {shift, ctrl} + m
	rofi-mount.sh {mnt,umnt}

### OTHER SCRIPTS ###
super + r
	setup_displays.sh

super + shift + r
	weather.sh

super + x
	lock.sh
super + shift + x
	music.sh pause && lock.sh

super + F9
	ethernet.sh toggle
super + F10
	wifi.sh toggle
super + F11
	bluetooth.sh toggle

XF86WLAN
	wifi.sh toggle

super + {_, shift, ctrl} + @Print
	scrot.sh {_,screen,focused}


### MEDIA AND BRIGHTNESS CONTROLL ###
super + {plus, minus} + {_, shift}
	volume.sh {-i,-d} {_,1}

super + numbersign + {_, shift, ctrl}
	volume.sh -t {_,mic,mic-unmute}

super + {_, shift} + {u,i,o}
	{music.sh,playerctl -p firefox} {previous,play-pause,next}

super + ctrl + {plus, minus}
	backlight.sh {-inc,-dec} 10

XF86Audio{Raise,Lower}Volume + {_,shift}
	volume.sh {-i,-d} {_,1}

XF86Audio{Mute,MicMute}
	volume.sh -t {_,mic}

XF86Audio{Prev,Play,Pause,Next}
	music.sh {previous,play,pause,next}

XFMonBrightness{Up,Down}
	backlight.sh {-inc,-dec} 10
