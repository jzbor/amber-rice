### WINDOW MANAGEMENT ###
super + a
    dwmc rioresize


### APPS ###
super + w
	firefox
super + shift + w
	firefox --private-window
super + ctrl + w
	surf

super + BackSpace
	$TERMINAL -e nvim
super + Return
	$TERMINAL

super + b
	$FILEBROWSER

super + p
	mpv
super + shift + p
	mpv "$(xclip -o)" --idle=no
super + ctrl + p
	rofi-mpv.sh

super + s
	sh -c "if pidof spotify; then dwmc toggleview 7; else  spotify; fi"

super + n
	notes.sh view
super + shift + n
	$TERMINAL -e notes.sh

super + Escape
	keyboard.sh toggle
super + shift + Escape
	sxiv ~/.config/assets/keyboard_us.png


### DUNST SHORTCUTS ###
super + {_,shift} + End
	dunstctl close{_,-all}
super + shift + {acute,ssharp}
	dunstctl {history-pop,action}


### ROFI SCRIPTS ###
super + d
	rofi -combi-modi drun,window,ssh -show combi
super + shift + d
	rofi-windows.sh
super + ctrl + d
	rofi -show run

super + Home
	menu.sh
Menu
	xmenu.sh

ctrl + alt + Delete
	menu.sh system

super + {_,shift} + Delete
	rofi-kill.sh {_,visual}

super + shift + c
	rofi-projects.sh

super + {ctrl, shift} + s
	rofi-unicode.sh {_,insert}

super + {shift, ctrl} + m
	rofi-mount.sh {mnt,umnt}

super + space
	pidof skippy-xd || skippy-xd --prev > /dev/null 2>&1
super + ctrl + space
	rofi-windows.sh

### OTHER SCRIPTS ###
super + r
	setup_displays.sh

super + shift + r
	weather.sh

super + x
	lock.sh
super + shift + x
	music.sh pause && lock.sh

super + F7
	ethernet.sh toggle
super + F8
	wifi.sh toggle
super + F9
	bluetooth.sh toggle

XF86WLAN
	wifi.sh toggle

super + {_, shift, ctrl} + @Print
	scrot.sh {_,screen,focused}


### MEDIA AND BRIGHTNESS CONTROLL ###
super + {plus, minus} + {_, shift}
	volume.sh {-i,-d} {_,1}

super + shift + control + plus
	volume.sh -b

super + numbersign + {_, shift, ctrl}
	volume.sh -t {_,mic,mic-unmute}

super + {_, shift} + {u,i,o}
	{music.sh,playerctl -p firefox} {previous,play-pause,next}

super + ctrl + {plus, minus}
	backlight.sh {-inc,-dec} 10

XF86Audio{Raise,Lower}Volume + {_,shift}
	volume.sh {-i,-d} {_,1}

XF86Audio{Mute,MicMute}
	volume.sh -t {_,mic}

XF86Audio{Prev,Play,Pause,Next}
	music.sh {previous,play,pause,next}

XF86MonBrightness{Up,Down}
	backlight.sh {-inc,-dec} 10
