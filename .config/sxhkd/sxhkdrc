### APPS ###
alt + w
	firefox
alt + shift + w
	firefox --private-window
alt + ctrl + w
	rofi-web.sh

alt + BackSpace
	$TERMINAL -e nvim
alt + Return
	$TERMINAL

alt + b
	$FILEBROWSER

alt + p
	mpv
alt + shift + p
	mpv "$(clipit -p)" --idle=no
alt + ctrl + p
	rofi-mpv.sh

alt + s
	if pidof spotify; then dwmc toggleviewex 7; else  spotify; fi

alt + n
	notes.sh view
alt + shift + n
	$TERMINAL -e notes.sh


### ROFI SCRIPTS ###
alt + d
	rofi -combi-modi drun,window,ssh -show combi
alt + shift + d
	rofi-windows.sh
alt + ctrl + d
	rofi -show run

alt + Home
	menu.sh
Menu
	xmenu.sh

ctrl + alt + Delete
	menu.sh system

alt + Delete
	rofi-kill.sh

alt + shift + c
	rofi-projects.sh

alt + {ctrl, shift} + s
	rofi-unicode.sh {_,insert}

alt + {shift, ctrl} + m
	rofi-mount.sh {mnt,umnt}

alt + space
	pidof skippy-xd || skippy-xd --prev > /dev/null 2>&1
alt + ctrl + space
	rofi-windows.sh

### OTHER SCRIPTS ###
alt + r
	setup_displays.sh

alt + shift + r
	weather.sh

alt + x
	lock.sh
alt + shift + x
	music.sh pause && lock.sh

alt + F7
	ethernet.sh toggle
alt + F8
	wifi.sh toggle
alt + F9
	bluetooth.sh toggle

XF86WLAN
	wifi.sh toggle

alt + {_, shift, ctrl} + @Print
	scrot.sh {_,screen,focused}


### MEDIA AND BRIGHTNESS CONTROLL ###
alt + {plus, minus} + {_, shift}
	volume.sh {-i,-d} {_,1}

alt + numbersign + {_, shift, ctrl}
	volume.sh -t {_,mic,mic-unmute}

alt + {_, shift} + {u,i,o}
	{music.sh,playerctl -p firefox} {previous,play-pause,next}

alt + ctrl + {plus, minus}
	backlight.sh {-inc,-dec} 10

XF86Audio{Raise,Lower}Volume + {_,shift}
	volume.sh {-i,-d} {_,1}

XF86Audio{Mute,MicMute}
	volume.sh -t {_,mic}

XF86Audio{Prev,Play,Pause,Next}
	music.sh {previous,play,pause,next}

XF86MonBrightness{Up,Down}
	backlight.sh {-inc,-dec} 10
