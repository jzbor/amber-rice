### MOONWM ###
super + shift + {comma, period}
    moonctl incnmaster {-1, 1}

super + Escape
    moonwm-menu expose

### APPS ###
super + shift + Return
    alacritty -e ssh faucip

super + shift + w
	firefox --private-window
super + ctrl + w
	surf

super + v
    if [ -S "/tmp/mpv-wrapper/$USER/socket" ]; then \
        mpv-menu; \
    else \
        mpv-wrapper; \
    fi
super + shift + v
	mpv-wrapper "$(xclip -o)"
super + ctrl + v
	menu-mpv.sh

super + s
	spotify.sh

super + e
    neovide

super + n
	notes.sh view
super + shift + n
	$TERMINAL -e notes.sh

# super + Escape
# 	keyboard.sh toggle
# super + shift + Escape
# 	sxiv ~/.config/assets/keyboard_us.png


### DUNST SHORTCUTS ###
super + {_,shift} + End
	dunstctl close{_,-all}
super + {minus, equal}
	dunstctl {history-pop,action}


### MENU SCRIPTS ###
super + shift + d
	menu-windows.sh
super + ctrl + d
	wmc-utils run

super + a
    xdotool windowactivate "$(wmctrl -lx | mydmenu -p Windows -l 15 -i | cut -f1 -d' ')" 2> /dev/null

super + Home
	menu.sh
Menu
	moonwm-menu context

super + {_,shift} + Delete
	menu-kill.sh {_,visual}

super + shift + c
	menu-projects.sh

super + {ctrl, shift} + s
	menu-unicode.sh {_,insert}

# super + {shift, ctrl} + m
# 	menu-mount.sh {mnt,umnt}

super + ctrl + space
	menu-windows.sh

super + {_, shift, ctrl} + p
    passmenu.sh {_, paste, copy}

### OTHER SCRIPTS ###
super + control + r
	setup_displays.sh

super + shift + F3
    setxkbmap de $(echo $MOONWM_KEYMAP | grep -o -- '-option.*')

super + F6
	weather.sh

super + x
    wmc-utils lock
	# lock.sh
super + shift + x
	music.sh pause && wmc-utils lock

super + F7
	ethernet.sh toggle
super + F8
	wifi.sh toggle
super + F9
	bluetooth.sh toggle

XF86WLAN
	wifi.sh toggle

super + {_, shift, ctrl} + @Print
	scrot.sh {_,screen,focused}


### MEDIA AND BRIGHTNESS CONTROLL ###
super + {_, shift} + {bracketleft, bracketright}
	{_, MOONWM_BOOST_AUDIO=1} wmc-utils volume {-,+}5

super + shift + control + bracketright
	volume.sh -b

super + backslash + {shift, ctrl}
	volume.sh -t {mic,mic-unmute}

super + backslash
    wmc-utils mute

super + {_, shift} + {u,i,o}
	{music.sh,playerctl -p firefox} {previous,play-pause,next}

super + ctrl + {bracketleft, bracketright}
	wmc-utils brightness {-,+}10

