### APPS ###
super + shift + w
	firefox --private-window
super + ctrl + w
	surf

super + p
	mpv
super + shift + p
	mpv "$(xclip -o)" --idle=no
super + ctrl + p
	rofi-mpv.sh

super + s
	sh -c "if pidof spotify; then dwmc toggleview 7; else  spotify; fi"

super + n
	notes.sh view
super + shift + n
	$TERMINAL -e notes.sh

# super + Escape
# 	keyboard.sh toggle
# super + shift + Escape
# 	sxiv ~/.config/assets/keyboard_us.png


### DUNST SHORTCUTS ###
super + {_,shift} + End
	dunstctl close{_,-all}
super + shift + {acute,ssharp}
	dunstctl {history-pop,action}


### ROFI SCRIPTS ###
super + shift + d
	rofi-windows.sh
super + ctrl + d
	rofi -show run

super + Home
	menu.sh
Menu
	dwm-menu context

super + {_,shift} + Delete
	rofi-kill.sh {_,visual}

super + shift + c
	rofi-projects.sh

super + {ctrl, shift} + s
	rofi-unicode.sh {_,insert}

super + {shift, ctrl} + m
	rofi-mount.sh {mnt,umnt}

super + ctrl + space
	rofi-windows.sh

### OTHER SCRIPTS ###
